<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="actionBarStyle">@style/TasteOfUgandaActionBar</item>
    </style>
    <style name="TasteOfUgandaActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@drawable/ic_launcher</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <style name="NoActionTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>

    </style>

</resources>
