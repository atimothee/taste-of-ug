<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/TasteOfUgandaActionBar</item>
    </style>
    <style name="TasteOfUgandaActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="background">@color/app_orange</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
        <item name="logo">@drawable/ic_launcher</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <style name="AppCompatTheme" parent="@style/Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
    </style>

</resources>
